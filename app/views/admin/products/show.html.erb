<div class="flex flex-wrap">
  <div class="w-full p-3">
    <div class="bg-white border rounded shadow">
      <div class="p-5">
        <a href="/admin/products" class="text-red-500 hover:text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7" />
          </svg>
        </a>
        <h3 class="font-bold text-1xl">
          Producto ID <%= @product.id %>
        </h3>

        <table class="<%= Vars::TABLE_CLASS %>">
          <tbody>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Nombre</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>"><%= @product.name %></td>
            </tr>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Descripción</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>"><%= @product.description %></td>
            </tr>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Precio</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>"><%= @product.price %></td>
            </tr>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Región</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>"><%= @product.region_id %></td>
            </tr>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Coordenadas</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>"><%= @product.latitude %>, <%= @product.longitude %></td>
            </tr>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Dirección</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>"><%= @product.address %></td>
            </tr>
            <tr>
              <th class="<%= Vars::TABLE_TH_CLASS %>">Estado</th>
              <td class="<%= Vars::TABLE_TD_CLASS %>">
                <%= I18n.t("states.#{@product.state}") %> 
                <% if @product.active? %>
                  <button onClick="javascript:toggleStateProduct(event, 'disable','<%= @product.id %>')" class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white px-4 border border-red-500 hover:border-transparent rounded">
                    Dar de baja
                  </button>
                <% else %>
                  <button onClick="javascript:toggleStateProduct(event, 'reactivate', '<%= @product.id %>')" class="bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white px-4 border border-green-500 hover:border-transparent rounded">
                    Reactivar
                  </button>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>

        <h3 class="text-blue-900"><%= @product.attachments.size %> Imagenes</h3>
        
        <section class="py-8 px-4">
          <div class="flex flex-wrap -mx-4 -mb-8">
            <% @product.images.each do |img| %>
              <div class="md:w-1/4 px-4 mb-8">
                <a href="#" onClick="javascript:deleteImageProduct(event, '<%= @product.id %>', '<%= img.id %>')" class="text-red-500 hover:text-gray-900">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </a>
                <img class="rounded shadow-md" src="<%= img.url %>" alt="" width="100">
              </div>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>