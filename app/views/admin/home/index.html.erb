        <h5 class="font-bold uppercase text-gray-600">Usuarios registrados por d√≠a</h5>
      </div>
      <div class="p-5">
        <%= line_chart @users_line %>
      </div>
    </div>
  </div>

  <div class="w-full md:w-1/2 p-3">
    <div class="bg-white border rounded shadow">
      <div class="border-b p-3">
        <h5 class="font-bold uppercase text-gray-600">Swipes Like/Dislike</h5>
      </div>
      <div class="p-5">
        <%= pie_chart @swipe_pie, colors: ["#079768", "#D9770B"] %>
      </div>
    </div>
  </div>
