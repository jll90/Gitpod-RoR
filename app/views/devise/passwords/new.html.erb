<main class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <section class="mt-10">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6 pt-3 rounded bg-gray-200">
        <label class="block text-gray-700 text-sm font-bold mb-2 ml-3" for="email">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-red-600 transition duration-500 px-3 pb-3" %>
      </div>

      <%= f.submit "Recuperar contraseÃ±a", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 p-5 rounded shadow-lg hover:shadow-xl transition duration-200" %>
    </section>
  <% end %>

  <%= render "devise/shared/links" %>
</main>